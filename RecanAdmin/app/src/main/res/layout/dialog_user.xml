<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorblue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/button_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="197dp"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/paper" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:text="NAME SURNAME"
                android:fontFamily="@font/nimbussanl_reg"
                android:textColor="@color/colortext"
                android:textSize="27dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="35dp"
                    android:fontFamily="@font/rsu"
                    android:paddingBottom="5dp"
                    android:text="มีแต้มคะแนนสะสม :  "
                    android:textColor="@color/Grayb"

                    android:textSize="30dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/point_user_have"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="0"
                    android:paddingRight="10dp"
                    android:textColor="@color/Grayb"
                    android:fontFamily="@font/nimbussanl_reg"
                    android:textSize="25sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="เเต้มที่ได้รับ:  "
                android:layout_marginStart="35dp"
                android:fontFamily="@font/rsu"
                android:textColor="@color/Grayb"
                android:textSize="30dp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/point_user_get"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginStart="71dp"
                    android:text="0"

                    android:paddingRight="10dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nimbussanl_reg"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/Success_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                app:srcCompat="@mipmap/susucees" />

            <ImageView
                android:id="@+id/Close_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="30dp"
                app:srcCompat="@mipmap/close_x1" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
