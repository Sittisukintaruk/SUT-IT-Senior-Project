<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/colorblue"

>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout12"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:paddingRight="40dp"

            app:layout_constraintBottom_toTopOf="@+id/imageView3" android:layout_marginTop="16dp">

        <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/point_st"
                android:id="@+id/imageView2"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
        />
        <TextView
                android:text="0"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:id="@+id/points"
                android:textColor="@color/colorblack"
                android:fontFamily="@font/ab"
                android:textSize="30dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="@drawable/button_menu"
        />
        <TextView
                android:text="พอยท์"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/point_new"
                android:paddingTop="13dp"
                android:textColor="@color/colorWhiet"
                android:fontFamily="@font/rsu"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
        />

    </LinearLayout>
    <ImageView
            android:layout_width="310dp"
            android:layout_height="227dp"
            app:srcCompat="@drawable/money_resize"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="97dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginTop="16dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="ระบุจำนวนเงินที่ต้องการแลก"
            android:textSize="35dp"
            android:fontFamily="@font/rsu"
            android:textColor="@color/colorWhiet"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/Money_max_point" app:layout_constraintHorizontal_bias="0.0"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout13"
            app:layout_constraintTop_toBottomOf="@+id/Money_max_point"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/text_money">

        <TextView
                android:layout_width="87dp"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="392dp"
                tools:layout_editor_absoluteX="16dp"
                android:gravity="center"
                android:id="@+id/textadd"
                android:background="@color/colorsky"
                android:textStyle="bold"
                android:text="ระบุเอง"

                android:fontFamily="@font/rsu"
                android:textSize="30dp"
                android:textColor="@color/colorWhiet"/>

        <EditText
                android:id="@+id/money_get"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_menu_notroud"
                android:textSize="20sp"
                android:hint="0"
                android:textAlignment="center"
                android:inputType="number"
                android:singleLine="true"
                tools:layout_editor_absoluteY="440dp"
                tools:layout_editor_absoluteX="139dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="392dp"
                tools:layout_editor_absoluteX="16dp"
                android:gravity="center"
                android:id="@+id/textViehr"
                android:text="บาท"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhiet"
                android:fontFamily="@font/rsu"
        />
    </LinearLayout>
    <TextView
            android:text="** 30 แเต้มแลกได้ 1 บาท"
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhiet"
            android:layout_height="32dp"
            android:id="@+id/text_money"
            android:textSize="25dp"
            android:fontFamily="@font/rsu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="178dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/success_bt"
            android:layout_marginStart="60dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="ยืนยัน"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorsky"
            android:textColor="@color/colorWhiet"
            android:textSize="35dp"
            android:textStyle="bold"
            android:fontFamily="@font/rsu"
            android:id="@+id/success_bt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="16dp"
    />
    <TextView
            android:text="จำนวนเงินสูงสุดที่แลกได้ ณ ตอนนี้"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rsu"
            android:textColor="@color/colorred"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/Money_max_point"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout13" app:layout_constraintHorizontal_bias="0.0"/>


</android.support.constraint.ConstraintLayout >
