<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorblue"

        tools:context=".Homepage"
        tools:layout_editor_absoluteY="25dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/button_menu"
            android:id="@+id/linearLayout9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">

        <LinearLayout
                android:id="@+id/linekok"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@drawable/button_menu"
                android:layout_marginBottom="20dp">
            <ImageView
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_person"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/profile_img"
            />
            <LinearLayout
                    android:id="@+id/textname"
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/button_menu"
                    android:layout_marginLeft="5dp"

            >
                <TextView
                        android:id="@+id/textName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colortext"
                        android:text="Natthawat Phakdeeprom"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nimbussanl_reg"
                        android:gravity="center|left"


                />
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_barcode"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/barcode_img"

            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
            android:layout_marginEnd="26dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            android:layout_marginTop="16dp"
    >

        <LinearLayout
                android:id="@+id/Reward_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/button_menu"
                android:layout_marginBottom="15dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/git"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:text="Reward"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/nimbussanl_reg"

            />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/line_notification"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/button_menu"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_notification"
                    android:layout_gravity="center"


            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:text="Notification"
                    android:textSize="20sp"
                    android:fontFamily="@font/nimbussanl_reg"

            />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:id="@+id/linearLayout11"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout10" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
    >


        <LinearLayout
                android:id="@+id/Location_new"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/button_menu"
                android:layout_marginBottom="15dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/map_new"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:text="Location"
                    android:textSize="20sp"
                    android:fontFamily="@font/nimbussanl_reg"

            />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/Histor_new"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/button_menu"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/history_new"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:text="History"
                    android:textSize="20sp"
                    android:fontFamily="@font/nimbussanl_reg"

            />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:id="@+id/buttuon_bt"
            android:layout_height="100dp"
            android:clickable="true"

            android:background="@drawable/button_menu_gree"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginBottom="96dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:clickable="true"

                      android:id="@+id/frameLayout_hom">


            <ImageView
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/review"
                    android:id="@+id/imageView4"
                    android:padding="5dp"/>
            <TextView
                    android:text="อัตราการแลกเปลี่ยนขวด"
                    android:textColor="@color/colorWhiet"
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:fontFamily="@font/rsu"
                    android:layout_height="match_parent"
                    android:id="@+id/textView8"
                    android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>