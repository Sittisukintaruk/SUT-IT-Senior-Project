<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorblue"
>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout12"
            android:gravity="center"
            android:paddingRight="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0">

        <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/point_st"
                android:id="@+id/imageView2"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
        />
        <TextView
                android:text="0"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:id="@+id/point"
                android:textColor="@color/colorblack"
                android:fontFamily="@font/ab"
                android:textSize="30dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="@drawable/button_menu"
        />
        <TextView
                android:text="พอยท์"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/point_new"
                android:paddingTop="13dp"
                android:textColor="@color/colorWhiet"
                android:fontFamily="@font/rsu"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
        />

    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12" android:id="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.142">


        <TableRow
                android:layout_width="fill_parent"

                android:layout_height="176dp">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_menu"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
            >

                <LinearLayout
                        android:id="@+id/texthr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clickable="true"


                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="117dp"
                            android:src="@mipmap/ic_time"

                            android:id="@+id/profile_img"

                    />
                    <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colortext"
                            android:text="ชั่วโมงจิตอาสา"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:fontFamily="@font/rsu"
                            android:gravity="center"


                    />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_menu"
                    android:layout_marginBottom="15dp"
            >


                <LinearLayout
                        android:id="@+id/money_cilk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clickable="true"


                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="107dp"
                            android:src="@drawable/money1"
                            android:layout_marginTop="10dp"
                            android:id="@+id/discode"

                    />
                    <TextView
                            android:id="@+id/text_discode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colortext"
                            android:text="เงิน"
                            android:textStyle="bold"

                            android:textSize="30sp"
                            android:fontFamily="@font/rsu"
                            android:gravity="center"

                    />

                </LinearLayout>

            </RelativeLayout>
        </TableRow>

        <TableRow
                android:layout_width="150dp" android:layout_height="57dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_menu"
            >


                <LinearLayout
                        android:id="@+id/textdiscode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clickable="true">
                    <ImageView
                            android:layout_width="133dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_discode"

                            android:id="@+id/discode_img"

                    />
                    <TextView
                            android:id="@+id/text_discode01"
                            android:layout_width="212dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/colortext"
                            android:text="ส่วนลดราคาอื่นๆ"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:paddingRight="25dp"
                            android:fontFamily="@font/rsu"
                            android:gravity="center"

                    />

                </LinearLayout>
            </RelativeLayout>

        </TableRow>


    </TableLayout>
</android.support.constraint.ConstraintLayout>