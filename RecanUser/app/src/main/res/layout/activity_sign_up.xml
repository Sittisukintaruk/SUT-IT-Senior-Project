<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp"
        android:focusableInTouchMode="true"
        android:background="@color/colorblue"
        tools:layout_editor_absoluteY="81dp">


    <TextView
            android:text="@string/bui"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/colorWhiet"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/bubee" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="143dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            android:id="@+id/linearLayout5" app:layout_constraintHorizontal_bias="0.483"
            android:layout_marginEnd="10dp" android:layout_marginStart="10dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/bubee">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="john Doe"
                android:id="@+id/edit_user"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_noblod"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:singleLine="true"

                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="ชื่อ"
                android:textSize="10dp"

                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.51" android:id="@+id/linearLayout3"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="Dad"
                android:id="@+id/edit_subname"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_noblod"
                android:inputType="textPersonName"
                android:singleLine="true"

                android:textColor="#000000"
                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:text="นามสกุล"
                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.483" android:id="@+id/linearLayout4"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="johnndoe@mail.com"
                android:id="@+id/edil_email"
                android:paddingLeft="20dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_noblod"

                android:textColor="#000000"
                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:text="อีเมล์"
                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.483" android:id="@+id/linearLayout6"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="0982172781"
                android:id="@+id/edil_tel"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_noblod"
                android:inputType="phone"
                android:textColor="#000000"

                android:maxLength="10"
                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:text="เบอร์โทร"
                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.483" android:id="@+id/linearLayout7"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" android:layout_marginBottom="23dp">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="*************"
                android:id="@+id/edil_username"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_noblod"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000"
                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:text="รหัสผ่าน"
                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_debe"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.483" android:id="@+id/linearLayout8"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            app:layout_constraintBottom_toTopOf="@+id/button_sigup" android:layout_marginBottom="24dp">


        <EditText
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:hint="*************"
                android:id="@+id/password"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_text_noblod"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:singleLine="true"

                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="36dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorblue"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:text="ยืนยันรหัสผ่าน"
                tools:layout_editor_absoluteY="119dp"
                tools:layout_editor_absoluteX="345dp"/>

    </LinearLayout>

    <Button
            android:id="@+id/button_sigup"
            android:text=">"

            android:background="@drawable/button_nomal"
            android:textColor="@color/colorWhiet"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

</android.support.constraint.ConstraintLayout>