<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:id="@+id/linearLayout14" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="102dp"
                app:srcCompat="@mipmap/ic_person"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Natthawat Phakedeepromma"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="25dp"

                android:textColor="@color/colorblack"
                android:layout_height="wrap_content"
                android:id="@+id/Name_history"
                android:gravity="center"
                android:fontFamily="@font/nimbussanl_reg"/>


    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="15dp"
            android:weightSum="2"
            android:background="@drawable/button_history"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_history"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0">


        <TextView
                android:text="ยอดแต้มสะสมแต้มคงเหลือ (พอยท์)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="25dp"
                android:fontFamily="@font/rsu"
                android:textColor="@color/colorblack"
                android:layout_weight="1"/>
        <TextView
                android:text="420"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/point_history"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/rsu"
                android:textColor="@color/colorblack"
                android:gravity="center|right"
                android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/recyclerView_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
